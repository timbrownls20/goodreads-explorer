{
  "name": "goodreads-parser-ts",
  "version": "1.0.0",
  "description": "TypeScript Goodreads library parser and scraper",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "goodreads-scraper": "dist/cli/scrape-library.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "scrape": "ts-node src/cli/scrape-library.ts",
    "scrape:dev": "ts-node src/cli/scrape-library.ts scrape https://www.goodreads.com/user/show/172435467-tim-brown --limit 10",
    "scrape:dev:resume": "ts-node src/cli/scrape-library.ts scrape https://www.goodreads.com/user/show/172435467-tim-brown --limit 10 --resume",
    "scrape:title:dev": "ts-node src/cli/scrape-library.ts scrape https://www.goodreads.com/user/show/172435467-tim-brown --title Babel",
    "scrape:shelf:dev": "ts-node src/cli/scrape-library.ts scrape https://www.goodreads.com/user/show/172435467-tim-brown --shelf paused --limit 10",
    "scrape:shelf:dev:resume": "ts-node src/cli/scrape-library.ts scrape https://www.goodreads.com/user/show/172435467-tim-brown --shelf paused --limit 10 --resume",
    "scrape:all": "ts-node src/cli/scrape-library.ts scrape https://www.goodreads.com/user/show/172435467-tim-brown",
    "scrape:all:resume": "ts-node src/cli/scrape-library.ts scrape https://www.goodreads.com/user/show/172435467-tim-brown --resume",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "keywords": [
    "goodreads",
    "scraper",
    "parser",
    "books",
    "library",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "commander": "^14.0.2",
    "reflect-metadata": "^0.2.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts",
      "!src/cli/**"
    ],
    "coverageDirectory": "coverage",
    "setupFiles": [
      "<rootDir>/src/__tests__/setup.ts"
    ]
  }
}
